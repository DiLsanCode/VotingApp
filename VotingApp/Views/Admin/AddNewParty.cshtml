@using VotingApp.Business.Models
@model RegisterNewParty
@{
    ViewData["Title"] = "Register New Party";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h2>Добави нова партия.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Name" class="form-control" autocomplete="off" aria-required="true" />
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Добави</button>
            <a class="w-100 btn btn-outline-dark" asp-area="" asp-controller="User" asp-action="ListOfAllParticipants">Отказ</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
