@model VotingApp.Business.Models.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating">
                <input asp-for="FirstName" class="form-control" autocomplete="off" aria-required="true" />
                <label asp-for="FirstName"></label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="MiddleName" class="form-control" autocomplete="off" aria-required="true" />
                <label asp-for="MiddleName"></label>
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="LastName" class="form-control" autocomplete="off" aria-required="true" />
                <label asp-for="LastName"></label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="EGN" class="form-control" autocomplete="off" aria-required="true" />
                <label asp-for="EGN"></label>
                <span asp-validation-for="EGN" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="PhoneNumber" class="form-control" autocomplete="off" aria-required="true" />
                <label asp-for="PhoneNumber"></label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}